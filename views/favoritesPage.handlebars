<h2>User Favorites</h2>
<div class="hero-results-box">
  <div class="results-box">
    <ul>
      {{#each favoritesData as |favorite|}}
        <li class="list-item">
          <div class="search-list-item">
            <div>
              <h2><a
                  href="/search/1?bn={{favorite.obd_id}}"
                >{{favorite.brewery_name}}</a></h2><br />
              <p>{{#if favorite.address}}{{favorite.address}}{{/if}}<br
                />{{favorite.city}},
                {{favorite.state}}
                {{favorite.postal_code}}</p><br /><br />
              {{#if favorite.phone}}
                <p>Phone: {{favorite.phone}}</p><br />
              {{/if}}
              {{#if favorite.website_url}}
                <a
                  href="{{favorite.website_url}}"
                  target="_blank"
                >{{favorite.brewery_name}} Website</a>
              {{/if}}
            </div>
          </div>
          <div>
            <button
              class="favorite-button is-favorited"
              data-info="{{favorite.obd_id}}"
              id="favoriteButton"
            >
              <span class="no-favorite-heart">ðŸ–¤</span><span
                class="favorite-heart"
              >ðŸ§¡</span>
            </button>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
{{#if favoritesData}}
  <script src="/js/singleSearch.js"></script>
{{/if}}